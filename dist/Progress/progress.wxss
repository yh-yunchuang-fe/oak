.inline-block {
  display: inline-block;
  vertical-align: middle;
}
.tc {
  text-align: center;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.75);
}
.progress {
  width: 100%;
  height: 24rpx;
  overflow: hidden;
}
.progress .active-progress {
  height: 100%;
  transform: translateX(-100%);
  transition: all 0.3s ease-in-out;
}
