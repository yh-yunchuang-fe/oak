<wxs src="WXS/base.wxs" module="Utils" />
<wxs module="ws">
    var getStyle = function(width, height, top, bottom,background){
        var styles = []
        if(width) styles.push('width:' + width)
        if(height) styles.push('height:' + height)
        if(top) styles.push('top:' + top)
        if(bottom) styles.push('bottom:' + bottom)
        if(background) styles.push('background:' + background)
        return styles.join(';')
    }
    module.exports = {
        getStyle: getStyle,
    };
</wxs>
<oak-overlay
    show="{{ _maskShow }}"
    autoClose="{{closeClickMask}}"
    background="{{!mask ? 'transparent' : ''}}"
    bind:onMaskClick="maskClick"
>
    <oak-animation name="{{_animate}}"
        ext-class="oak-popup-body {{position}} {{ Utils.classNames({iphonex: isIPhonex}) }} body-class"
        show="{{_bodyShow}}"
        duration="{{duration}}"
        bind:onAnimationEnd="animationEnd"
    >
        <slot></slot>
    </oak-animation>
</oak-overlay>