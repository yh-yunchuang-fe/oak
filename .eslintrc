{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "settings": {},
    "plugins": ["@typescript-eslint"],
    "parser": "@typescript-eslint/parser",
    "rules": {
        "strict": 0,
        "indent": ["error", 4],
        "linebreak-style": [0, "error", "windows"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "no-console": "off",
        "no-extra-boolean-cast": "off",
        "no-useless-escape": "off"
    },
    "globals": {
        "wx": true,
        "Page": true,
        "getApp": true,
        "getCurrentPages": true,
        "Component": true,
        "describe": true,
        "it": true,
        "expect": true,
        "jest": true,
        "beforeEach": true,
        "beforeAll": true,
        "afterEach": true,
        "afterAll": true,
        "Behavior": true,
        "requirePlugin": true
    }
}