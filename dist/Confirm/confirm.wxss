.inline-block {
  display: inline-block;
  vertical-align: middle;
}
.tc {
  text-align: center;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.75);
}
.oak-confirm {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 15;
}
.oak-confirm .yh-confirm-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
}
.oak-confirm .yh-confirm-body {
  width: 580rpx;
  padding: 0 36rpx 30rpx 36rpx;
  box-sizing: border-box;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 1;
  color: #333;
  text-align: center;
  transform: translate(-50%, -50%);
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
}
.oak-confirm .yh-confirm-body .close-icon {
  padding: 6rpx;
  position: absolute;
  left: 18rpx;
  top: 12rpx;
}
.oak-confirm .yh-confirm-body .title {
  font-size: 36rpx;
  font-weight: 500;
  margin-top: 48rpx;
  margin-bottom: 36rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  -webkit-box-flex: 2;
  height: inherit;
}
.oak-confirm .yh-confirm-body .main-title {
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}
.oak-confirm .yh-confirm-body .content {
  min-height: 80rpx;
  font-size: 28rpx;
  margin-bottom: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.oak-confirm .yh-confirm-body .content view {
  width: 100%;
  word-wrap: break-word;
  max-height: 200rpx;
  overflow-y: scroll;
}
.oak-confirm .yh-confirm-body .main-content {
  margin-top: 80rpx;
}
.oak-confirm .yh-confirm-body .button-area {
  display: flex;
  justify-content: space-between;
}
.oak-confirm .yh-confirm-body .button-area > view {
  width: 240rpx;
  height: 80rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  border-radius: 44rpx;
}
.oak-confirm .yh-confirm-body .button-area .cancel-btn {
  border: 1rpx solid #ddd;
}
.oak-confirm .yh-confirm-body .button-area .confirm-btn {
  background: linear-gradient(to right, #FF4055, #FF1A34);
  color: #fff;
}
.oak-confirm .yh-confirm-body .button-area .one-btn {
  width: 480rpx;
  margin-left: 14rpx;
}
.oak-confirm .animated {
  width: 100%;
  height: 100%;
  animation-duration: 0.2s;
  animation-fill-mode: both;
}
@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale3d(0.8, 0.8, 0.8);
  }
  to {
    opacity: 1;
    transform: scale3d(1, 1, 1);
  }
}
.oak-confirm .bounceIn {
  animation-name: bounceIn;
}
