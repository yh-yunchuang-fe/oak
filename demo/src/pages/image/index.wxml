            bgColor="#f3f3ff3"
        />
    </view>
    <view class="row">
        <oak-image 
            src="{{img1}}" 
            mode="widthFix"
            width="200rpx"
            height="300rpx"
            bgColor="#f3f3ff3"
        />
        <oak-image 
            src="{{img2}}" 
            mode="widthFix"
            width="200rpx"
            height="300rpx"
            bgColor="#f3f3ff3"
        />
        <oak-image 
            src="{{img3}}" 
            mode="widthFix"
            width="200rpx"
            height="300rpx"
            bgColor="#f3f3ff3"
        />
    </view>
    <view class="h3">缩放模式，高度不变，宽度自动变化，保持原图宽高比不变</view>
    <view class="row">
        <oak-image 
            src="{{img1}}" 
            mode="heightFix"
            width="200rpx"
            height="200rpx"
            bgColor="#f3f3ff3"
        />
        <oak-image 
