.inline-block {
  display: inline-block;
  vertical-align: middle;
}
.tc {
  text-align: center;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.75);
}
.oak-slide-view {
  position: relative;
  overflow: hidden;
}
.oak-slide-view .slide .right {
  display: flex;
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  font-size: 28rpx;
  transform: translate3d(100%, 0, 0);
  text-align: center;
  line-height: 90rpx;
  color: #fff;
}
.oak-slide-view .slide .right > view {
  display: flex;
  flex: 1;
  text-align: center;
  justify-content: center;
  align-items: center;
}
.oak-slide-view .item {
  display: flex;
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  font-size: 28rpx;
  width: 80px;
  text-align: center;
  justify-content: center;
  align-items: center;
  color: #fff;
}
.oak-slide-view .item.share {
  background: #d2d2d2;
}
.oak-slide-view .item.edit {
  background: #4facfe;
}
.oak-slide-view .item.delete {
  background: #fa5151;
}
.oak-slide-view .item .icon {
  width: 84rpx;
  height: 84rpx;
  line-height: 84rpx;
  background: #fff;
  border-radius: 50%;
}
