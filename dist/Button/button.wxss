  align-items: center;
  justify-content: center;
  vertical-align: top;
  -webkit-appearance: none;
  -webkit-text-size-adjust: 100%; }
  .oak-button-size_block {
    width: 100%;
    padding: 0 34rpx;
    height: 80rpx;
    font-size: 36rpx;
    line-height: 78rpx;
    display: flex;
    justify-content: center; }
  .oak-button-size_large {
    padding: 0 28rpx;
    height: 70rpx;
    font-size: 30rpx;
    line-height: 0; }
    .oak-button-size_large.oak-button-shape_circle {
      padding: 0;
      width: 70rpx;
      border-radius: 70rpx; }
  .oak-button-size_default {
    padding: 0 24rpx;
    height: 56rpx;
    font-size: 26rpx;
    line-height: 0; }
    .oak-button-size_default.oak-button-shape_circle {
      padding: 0;
      width: 56rpx;
      border-radius: 56rpx; }
  .oak-button-size_small {
    padding: 0 20rpx;
    height: 44rpx;
    font-size: 22rpx;
    line-height: 0; }
    .oak-button-size_small.oak-button-shape_circle {
      padding: 0;
      width: 44rpx;
      border-radius: 44rpx; }
  .oak-button-type_default {
    background-color: #fff;
    border: 1rpx solid rgba(221, 221, 221, 0.8);
    color: #333; }
  .oak-button-type_primary {
    background-color: #FD7622;
    border: 1rpx solid #FD7622;
    color: #fff; }
    .oak-button-type_primary.plain {
      color: #FD7622; }
  .oak-button-type_danger {
    background-color: #FF4600;
    border: 1rpx solid #FF4600;
    color: #fff; }
    .oak-button-type_danger.plain {
      color: #FF4600; }
  .oak-button-type_info {
    background-color: #FEF1E8;
    border: 1rpx solid #FD7622;
    color: #FD7622; }
  .oak-button-shape_square {
    border-radius: 0; }
  .oak-button-shape_round {
    border-radius: 200rpx; }
  .oak-button .button-oak-icon {
    display: inline-block;
    vertical-align: middle; }
  .oak-button .button-icon {
    margin-right: 10rpx;
    font-size: inherit;
    color: inherit; }
  .oak-button.plain {
    background-color: transparent; }
  .oak-button.disabled {
    opacity: 0.65; }
  .oak-button:after {
    display: none; }
