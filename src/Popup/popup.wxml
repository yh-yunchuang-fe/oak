<wxs src="WXS/base.wxs" module="Utils" />
<wxs module="ws">
    function showTitle(show, position){
        if(['top','bottom'].indexOf(position) === -1) return false
        return show
    }
    module.exports = {
        showTitle: showTitle,
    };
</wxs>
<oak-overlay
    show="{{ _maskShow }}"
    autoClose="{{closeClickMask}}"
    background="{{!mask ? 'transparent' : ''}}"
    bind:onMaskClick="maskClick"
>
    <oak-animation name="{{_animate}}"
        ext-class="oak-popup-body {{position}} {{ Utils.classNames({iphonex: isIPhonex, showRadius: showRadius}) }} {{sizeInNine ? 'size-' + sizeInNine : ''}} body-class"
        show="{{_bodyShow}}"
        duration="{{duration}}"
        bind:onAnimationEnd="animationEnd"
    >
        <slot></slot>
    </oak-animation>
</oak-overlay>