<view class="c-tabs ext-class" wx:if="{{tabs && tabs.length > 1}}">
	<view class="tabs-wrap">			
		<view class="c-tab-box tab-class" wx:for="{{tabs}}" wx:for-item="tab" wx:key="index">
			<view class="tab {{selectIndex == index ? 'default tab-line' : ''}} tab-title"
			data-index="{{index}}"
			data-tab="{{tab}}"
			data-point="{{index}}"
			bindtap="onTabClick">
				<view class="tab-value">
					{{tab.title}}
				</view>
				<view class="tab-line" wx:if="{{selectIndex == index}}"></view>
			</view>
		</view>
	</view>
</view>

