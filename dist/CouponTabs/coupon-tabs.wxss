.c-tabs {
  position: relative;
  width: 100%;
  height: 80rpx;
  overflow: hidden;
}
.c-tabs .tabs-wrap {
  position: relative;
  white-space: nowrap;
  display: flex;
  height: 100%;
}
.c-tabs .c-tab-box {
  position: relative;
  width: 100%;
  height: 100%;
  display: inline-flex;
  justify-content: space-evenly;
  align-items: center;
  text-align: center;
  justify-content: center;
  z-index: 2;
}
.c-tabs .c-tab-box .tab {
  height: 100%;
  width: 192rpx;
  box-sizing: border-box;
  line-height: 80rpx;
  max-width: 100%;
  position: relative;
  font-family: Ping Fang SC;
  font-weight: 500;
  font-size: 28rpx;
  display: inline-block;
  text-align: center;
  color: #333;
}
.c-tabs .c-tab-box .tab .tab-value {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.c-tabs .c-tab-box .tab.default {
  font-size: 32rpx;
  color: #FF1A34;
}
.c-tabs .c-tab-box .tab .tab-line {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  margin-bottom: 8rpx;
  bottom: 0rpx;
  width: 60rpx;
  height: 4rpx;
  background-color: #FF1A34;
  content: '';
  box-sizing: border-box;
  overflow: hidden;
  border-radius: 4rpx;
}
