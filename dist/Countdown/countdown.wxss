.inline-block {
  display: inline-block;
  vertical-align: middle;
}
.tc {
  text-align: center;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.75);
}
.oak-countdown {
  display: flex;
  text-align: center;
}
.oak-countdown .time-num {
  font-family: PingFangSC-Medium, PingFang SC;
  min-width: 44rpx;
  height: 44rpx;
  background: #333333;
  border-radius: 4rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
  line-height: 44rpx;
}
.oak-countdown .time-text {
  font-family: PingFangSC-Regular, PingFang SC;
  min-width: 8rpx;
  height: 40rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}
.oak-countdown .timer-status {
  font-size: 28rpx;
  color: #999;
}
