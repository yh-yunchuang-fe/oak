.oak-image {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.oak-image .image {
  width: 100%;
  height: 100%;
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
  transition: all 0.2s;
  background-color: #f0f0f0;
  background-image: url(https://static.yonghuivip.com/wechatapp/static/images/wechat_app_default_img_square.png?imageMogr2/auto-orient/thumbnail/320x/strip/format/jpg/interlace/1);
}
.oak-image .image.loaded {
  background-image: none;
  background-color: transparent;
}
.oak-image .image.hidden {
  display: none;
}
