.oak-steps {
  padding: 30rpx;
  background-color: #fff;
  display: flex;
}
.oak-steps .icon {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
}
.oak-steps-content-horizontal {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.oak-steps-tags-horizontal {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.oak-steps-tags-horizontal .oak-steps-tags-item:not(:last-child) {
  flex: 1;
}
.oak-steps-tags-horizontal .oak-steps-tags-item {
  display: flex;
  align-items: center;
}
.oak-steps-tags-horizontal .line {
  flex: 1;
  height: 1px;
  background-color: #ccc;
  margin: 0 10rpx;
}
.oak-steps-content-vertical {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}
.oak-steps-content-vertical .oak-steps-content-item {
  margin-left: 20rpx;
  padding: 20rpx 20rpx 20rpx 0;
}
.oak-steps-tags-vertical {
  display: flex;
  flex-direction: column;
}
.oak-steps-tags-vertical .oak-steps-tags-item {
  flex: 1;
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.oak-steps-tags-vertical .oak-steps-tags-item:not(:last-child)::after {
  position: absolute;
  width: 1px;
  height: 100%;
  top: 40rpx;
  background-color: #ccc;
  content: '';
  z-index: 1;
}
.oak-steps-tags-vertical .icon {
  z-index: 999 !important;
}
.oak-steps-tags-vertical .line {
  display: none;
}
.oak-steps-content-item {
  display: flex;
  flex-direction: column;
}
.oak-steps-content-item .title {
  font-size: 28rpx;
  color: #333;
}
.oak-steps-content-item .desc {
  font-size: 24rpx;
  color: #666;
}
