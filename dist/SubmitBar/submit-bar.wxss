.inline-block {
  display: inline-block;
  vertical-align: middle;
}
.tc {
  text-align: center;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.75);
}
.oak-submit-bar {
  padding: 20rpx;
  width: 100%;
  min-height: 120rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  color: #333;
}
.oak-submit-bar.areabottom {
  padding-bottom: 60rpx;
}
.oak-submit-bar-tip {
  line-height: 1;
  min-height: auto;
}
.oak-submit-bar-tip-title {
  font-size: 24rpx;
  color: #FF0500;
}
.oak-submit-bar-body {
  display: flex;
  align-items: center;
  flex: 1;
}
.oak-submit-bar-body-content {
  display: flex;
  flex: 1;
  flex-direction: column;
}
.oak-submit-bar-label {
  margin-right: 4rpx;
  font-size: 28rpx;
}
.oak-submit-bar-currency,
.oak-submit-bar-price {
  margin-right: 4rpx;
  font-weight: bolder;
  color: #FC4915;
}
.oak-submit-bar-currency {
  font-size: 24rpx;
}
.oak-submit-bar-sub-title {
  font-size: 24rpx;
  color: #999;
}
.oak-submit-bar-button {
  min-width: 194rpx;
  display: block;
}
