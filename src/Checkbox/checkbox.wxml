<wxs src="WXS/base.wxs" module="Utils" />

<view 
    class="oak-checkbox ext-class" 
    bindtap="change">

    <oak-icon 
        size="{{size}}"
        class="oak-icon"
        ext-class="oak-checkbox-icon"
        name="{{value ? icon.active : disabled ? icon.disabled : icon.normal}}" 
        color="{{value ? disabled ? disabledColor : color : disabledColor}}" 
    />

    <slot></slot>
</view>