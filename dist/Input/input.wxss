.oak-input {
  display: flex;
  font-size: 28rpx;
  color: #333;
}
.oak-input oak-list-item {
  flex: 1;
}
.oak-input-textarea {
  position: relative;
  display: flex;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  padding: 0 20rpx;
  overflow: hidden;
}
.oak-input-textarea.border::after {
  position: absolute;
  left: 20rpx;
  bottom: 0;
  width: 100%;
  height: 1rpx;
  content: '';
  border-bottom: 1rpx solid rgba(221, 221, 221, 0.8);
  box-sizing: border-box;
}
.oak-input-textarea-label {
  position: relative;
  padding: 20rpx 0;
  margin-right: 20rpx;
}
.oak-input-textarea-icon {
  margin-right: 20rpx;
}
.oak-input-textarea-body {
  position: relative;
  display: flex;
  align-items: center;
  flex: 1;
  width: 0%;
}
.oak-input-textarea-right {
  display: flex;
  align-items: center;
}
.oak-input-textarea-right oak-icon {
  padding-left: 20rpx;
}
.oak-input-content {
  position: relative;
  display: flex;
  font-size: 28rpx;
  color: #333;
  align-items: center;
}
.oak-input-content .oak-input-label {
  min-width: 120rpx;
  margin-right: 20rpx;
}
.oak-input-content .oak-input-label.require::before {
  content: '*';
  position: absolute;
  color: #f5222d;
  left: -20rpx;
  top: 0;
}
.oak-input-content .oak-input-body {
  position: relative;
  flex: 1;
}
.oak-input-content .oak-input-body input {
  flex: 1;
}
.oak-input-content .oak-input-body input.error {
  color: #f5222d;
}
.oak-input-content .oak-input-body .oak-input-err-msg {
  position: absolute;
  font-size: 20rpx;
  left: 0;
  bottom: -20rpx;
  color: #f5222d;
}
.oak-input-content .oak-input-clear {
  padding: 0 15rpx;
}
