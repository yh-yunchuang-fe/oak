.oak-stepper {
  font-size: 0;
  display: flex;
  align-items: center;
}
.oak-stepper .minus,
.oak-stepper .plus {
  position: relative;
  width: 25px;
  height: 25px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.oak-stepper .minus:before,
.oak-stepper .plus:before {
  content: "";
  position: absolute;
  left: -1rpx;
  top: -1rpx;
  width: 200%;
  height: 200%;
  border-radius: 50%;
  border: 1px solid #eee;
  transform: scale(0.5);
  transform-origin: left top;
}
.oak-stepper .input {
  font-size: 14px;
  text-align: center;
  margin: 0 5px;
}
