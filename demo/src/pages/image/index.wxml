            bgColor="#f3f3ff3"
        />
    </view>
    <view class="h3">加载失败</view>
    <view class="row">
        <oak-image 
            src="{{errImg}}" 
            mode="heightFix"
            width="200rpx"
            height="200rpx"
            bgColor="#f3f3ff3"
        />
    </view>
</view>
