.inline-block {
  display: inline-block;
  vertical-align: middle;
}
.tc {
  text-align: center;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.75);
}
.oak-list-item {
  position: relative;
  min-height: 90rpx;
  background-color: #fff;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  line-height: 1.5;
  overflow: hidden;
}
.oak-list-item-left {
  margin-right: 20rpx;
}
.oak-list-item .label-oak-icon,
.oak-list-item .arrow-oak-icon {
  display: flex;
  align-items: center;
}
.oak-list-item.border::after {
  position: absolute;
  left: 20rpx;
  bottom: 0;
  width: 100%;
  height: 1rpx;
  content: '';
  border-bottom: 1px solid rgba(221, 221, 221, 0.8);
  box-sizing: border-box;
}
.oak-list-item-title {
  font-size: 28rpx;
  color: #333;
}
.oak-list-item-image {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}
.oak-list-item-image.large {
  width: 120rpx;
  height: 120rpx;
}
.oak-list-item-subtitle {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #999;
}
.oak-list-item-body {
  padding: 20rpx 0;
  flex: 1;
  width: 0%;
}
.oak-list-item-body:not(:last-child) {
  margin-right: 20rpx;
}
.oak-list-item-content {
  font-size: 28rpx;
  color: #999;
  display: inline-block;
  vertical-align: middle;
}
.oak-list-item-content.title {
  color: #333;
}
.oak-list-item-title.nowrap,
.oak-list-item-subtitle.nowrap,
.oak-list-item-content.nowrap {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  -webkit-box-flex: 1;
  height: inherit;
}
.oak-list-item-nav {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 2;
}
